<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Allergy Attention</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/peanutFavicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/style.css" />

  <!-- Bootstrap core CSS -->
  <link href="assets/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>

<body>
  <!-- Navigation -->
<nav>
<div class="topnav" id="myTopnav">
  <a id="title">Allergy Attention</a>
  <a href="/login" class="active">Home</a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
  <a href="/logout">Logout</a>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <img class="hamburger" src="/assets/img/menu.png">
  </a>
</div>
</nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-8">

        <h1 class="my-4">Allergy Attention
          {{!-- <small>Secondary Text</small> --}}
        </h1>

        <!-- Blog Post -->
        <section id="domos">
          <div class="domo">
            {{#if domos}}
            {{#each domos}}
          <div class="card mb-4">
            {{!-- <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> --}}
            <div class="card-body">
              <h2 class="card-title">{{this.name}}</h2>
              <p class="card-text">{{this.age}}</p>
            </div>
            <div class="card-footer text-muted">
              Posted on January 1, 2017 by
            </div>
          </div>
            {{/each}}
            {{else}}
            <h3 class="emptyDomo">No domos yet</h3>          
          {{/if}}
          </div>
        </section>
    </div>
    <!-- /.row -->

<!-- Sidebar Widgets Column -->
      <div class="entryForm">
       <h3>Add Food</h3>
         <div>
          <form id="domoForm" name="domoForm" action="/maker" method="POST" class="domoForm">
            <input class="textBox" id="domoName" type="text" name="name" placeholder="Meal / Food Name" />
            <input class="textBox" id="domoAge" type="text" name="age" placeholder="List Ingredients" />
            <select id="selectBox">
              <option selected="selected" disabled="disabled">Rate the reaction:</option>
              <option value="urgentCare">Urgent Care</option>
              <option value="painful">Painful</option>
              <option value="mildDiscomfort">Mild Discomfort</option>
              <option value="noPain">No Pain</option>
            </select>
            <input type="hidden" name="_csrf" value={{csrfToken}} />
            <input class="formSubmit" type="submit" value="Make Domo" />
          </form>
        </div>
      </div>

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Urgent Care</a>
                  </li>
                  <li>
                    <a href="#">Painful</a>
                  </li>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Mild Discomfort</a>
                  </li>
                  <li>
                    <a href="#">No Pain</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

      </div>
  </div>
  </div>
  <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <script src="/assets/bundle.js"></script>
    <script>
      function myFunction() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
        x.className += " responsive";
      } else {
        x.className = "topnav";
      }
    }
    </script>
</body>

</html>