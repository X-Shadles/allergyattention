<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Allergy Attention</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/peanutFavicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/style.css" />

  <!-- Bootstrap core CSS -->
  <link href="assets/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>

<body>
  <!-- Navigation -->
<nav>
<div class="topnav" id="myTopnav">
  <a id="title">Allergy Attention</a>
  <a href="/login" class="active">Home</a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
  <a href="/logout">Logout</a>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <img class="hamburger" src="/assets/img/menu.png">
  </a>
</div>
</nav>

  <!-- Page Content -->
  <content class="appPage">

    <div class="main">
      <!-- Blog Entries Column -->
      <div id="posts">
        <h1>Allergy Attention</h1>
        <!-- Blog Post -->
        <section id="domos">
          <div class="domo">
            {{#if domos}}
            {{#each domos}}
          <div class="card mb-4">
            {{!-- <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap"> --}}
            <div class="card-body">
              <h2 class="card-title">{{this.name}}</h2>
              <p class="card-text">{{this.age}}</p>
            </div>
            <div class="card-footer text-muted">
              {{this.date}}
            </div>
          </div>
            {{/each}}
            {{else}}
            <h3 class="emptyDomo">No food added</h3>          
          {{/if}}
          </div>
        </section>
    </div>
  </div>

<!-- Sidebar Widgets Column -->
    <div class="sidebar">
       <div class="addForm">
       <h3>Add Food</h3>
         <div>
          <form id="domoForm" name="domoForm" action="/maker" method="POST" class="domoForm">
            <input class="textBox add" id="domoName" type="text" name="name" placeholder="Meal / Food Name" />
            <input class="textBox add" id="domoAge" type="text" name="age" placeholder="List Ingredients w/ commas" />
            <select class="selectBox">
              <option selected="selected" disabled="disabled">Rate the reaction:</option>
              <option value="urgentCare">Urgent Care</option>
              <option value="painful">Painful</option>
              <option value="mildDiscomfort">Mild Discomfort</option>
              <option value="noPain">No Pain</option>
            </select>
            <input type="hidden" name="_csrf" value={{csrfToken}} />
            <input class="formSubmit" type="submit" value="Add" />
          </form>
        </div>
      </div>

      <!-- Search Widget -->
        <div class="search">
          <h3>Search</h3>
          <div class="searchBar">
            <input type="text" class="form-control" placeholder="Search for...">
              <button class="formSubmit" type="button">Go</button>
          </div>
        </div>

      <!-- Categories Widget -->
        <div class="sort">
          <h3>Categories</h3>
          <div class="pickSort">
            <ul class="list-unstyled">
              <li>
                <a href="#">Urgent Care</a>
              </li>
              <li>
                <a href="#">Painful</a>
              </li>
              <li>
                <a href="#">Mild Discomfort</a>
              </li>
              <li>
                <a href="#">No Pain</a>
              </li>
            </ul>
        </div>
    </div>  
  </div>      

  </content>
  <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <script src="/assets/bundle.js"></script>
    <script>
      function myFunction() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
        x.className += " responsive";
      } else {
        x.className = "topnav";
      }
    }
    </script>
</body>

</html>